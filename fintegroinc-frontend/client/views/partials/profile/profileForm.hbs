<form class="col-lg-6 col-12 offset-lg-3">
  <div class="row">
    <div class="form-group col-12 col-sm-6">
      <label for="firstname">Firstname</label>
      <input type="text" class="form-control" id="firstname" aria-describedby="firstnameHelp" placeholder="Enter firstname" value="{{profile.firstname}}">
      <small id="firstnameHelp" class="form-text text-muted">Some help text</small>
    </div>
    <div class="form-group col-12 col-sm-6">
      <label for="lastname">Lastname</label>
      <input type="text" class="form-control" id="lastname" placeholder="Enter lastname" value="{{profile.lastname}}">
    </div>
  </div>
  <div class="form-group">
    <label for="quote">Quote</label>
    <textarea class="form-control" style="resize: none" id="quote" rows="3">{{profile.quote}}</textarea>
  </div>
  <div class="row">
    <div class="form-group col-12 col-sm-6">
      <label for="lived">Lived</label>
      <input type="text" class="form-control" id="lived" value="{{profile.lived}}">
    </div>
    <div class="form-group col-12 col-sm-6">
      <label for="from">From</label>
      <input type="text" class="form-control" id="from" value="{{profile.from}}">
    </div>
  </div>
  <div class="form-group">
    <label for="went">Went</label>
    <input type="text" class="form-control" id="went" value="{{profile.went}}">
  </div>
  <div class="form-group">
    <label for="profilePhoto">Profile photo</label>
    <input type="file" name="UploadForm[imageFile]" class="form-control-file" id="profilePhoto" aria-describedby="profilePhotoHelp">
    <small id="profilePhotoHelp" class="form-text text-muted">File must be in "png, jpg, gif" format, and less than 10mb.</small>
  </div>
  <input type="hidden" id="profilePhotoLink" value="{{profile.photo}}">
  <button type="submit" class="btn btn-primary js-update-profile" data-profileId="{{profile.user_id}}">Update</button>
  <br><br><br>
<a href="#" class="js-remove-profile" data-profileid="{{profile.user_id}}">Remove profile</a>
</form>

